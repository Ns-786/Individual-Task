@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model FortniteCompetition.Models.CompetitionPost
@{
    Layout = "_Layout";
}
<div class="main-container">
    <h1>Create Competition Post</h1>

    <fieldset>

        <form asp-action="Create" asp-controller="Competition">

            <div asp-validation-summary="ModelOnly" class="input-validation-error"></div>

            <div class="form-item">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Competition Name" />
                <span asp-validation-for="Name"></span>
            </div>

            <div class="form-item">
                <label asp-for="Location"></label>
                <input asp-for="Location" class="form-control" placeholder="Competition Location" />
                <span asp-validation-for="Location"></span>
            </div>

            <div class="form-item">
                <label asp-for="Date"></label>
                <input asp-for="Date" class="form-control" placeholder="Competition Location" />
                <span asp-validation-for="Date"></span>
            </div>

            <div class="form-item">
                <label asp-for="Body"></label>
                <textarea asp-for="Body" class="form-control" placeholder="Competition post content"></textarea>
                <span asp-validation-for="Body"></span>
            </div>

            <p>
                <button class="submit-btn" type="submit">Create Post</button>
            </p>

        </form>

    </fieldset>
</div>